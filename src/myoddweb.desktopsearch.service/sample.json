{
  "MaxNumCharactersPerWords": 255,
  "MaxNumCharactersPerParts": 15,

  "WebServer": {
    "Port": 9501
  },
  "Loggers": [
    {
      "LogLevels": [
        "All"
      ],
      "Type": "Console"
    },
    {
      "LogLevels": [
        "Error",
        "Warning",
        "Information"
      ],
      "Type": "File",
      "Path": "./"
    }
  ],
  "Timers": {
    "EventsParserMs": 30000
  },
  "Processors": {
    "UpdatesWordsPerFilesPerEvent": 20000,
    "UpdatesFilesPerEvent" : 1000,
    "UpdatesFolderPerEvent": 10,
    "UpdateWordParsedPerEvent": 50,
    "EventsProcessorMs": 200,
    "MaintenanceProcessorMinutes": 60,
    "IgnoreFiles": [
      {
        "Pattern": "*.*",
        "MaxSizeMegabytes": "1024"
      }
    ]
  },
  "Paths": {
    "ParseFixedDrives": true,
    "ParseRemovableDrives": false,
    "Paths": [
      "c:\\Folder",
      "c:\\other"
    ],
    "IgnoredPaths": [
      "%temp%",
      "%tmp%",
      "%ProgramFiles%",
      "%ProgramFiles(x86)%",
      "%ProgramW6432%",
      "%windir%",
      "%SystemRoot%"
    ],
    "ComponentsPaths": [
      ".\\"
    ],
    "IgnoreInternetCache": true,
    "IgnoreRecycleBins": true,
    "IgnoreCurrentPath": true
  },
  "Database": {
    "Source": ".\\database.db",
    "IgnoredPaths": [ ".\\" ],
    "CacheSize": 10000,
    "AutoCheckpoint": 65536
  },
  "Performance": {
    "CategoryName": "myoddweb.desktopsearch",
    "CategoryHelp": "Performance counters for myoddweb.desktopsearch",
    "DeleteStartUp": true
  }
}
